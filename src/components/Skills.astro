---
import { getLangFromUrl, useTranslations } from '@/i18n/utils';
import { Image } from 'astro:assets';
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div id='skills' class='grid grid-cols-2 w-full gap-32 h-screen pt-16'>
  <div class='h-72'>
    <h2 class='text-7xl text-center rillosta'>{t('skills.title')}</h2>
    <p class='text-3xl pl-5 pochita'>{t('skills.description')}</p>
  </div>
  <div class='w-auto h-1/2 rounded-2xl bg-indigo-900 mr-4 lg:h-3/5 xl:h-11/12 not-lg:h-3/4'>
